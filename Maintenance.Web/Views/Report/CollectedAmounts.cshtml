@{
    ViewData["Title"] = Messages.CollectedAmountsReport;
}

<!--begin::Card-->
<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @Messages.CollectedAmountsReport
                <span class="d-block text-muted pt-2 font-size-sm">@string.Format(Messages.IndexSubTitle, Messages.CollectedAmountsReport)</span>
            </h3>
        </div>
        <div class="card-toolbar">
            <a id="PdfBtn" title="@string.Format(Messages.ExportToPdf)" class="btn btn-primary font-weight-bolder mr-2">
                @Messages.ExportToPdf
            </a>
            <a id="ExcelBtn" title="@string.Format(Messages.ExportToExcel)" class="btn btn-secondary font-weight-bolder">
                @Messages.ExportToExcel
            </a>
        </div>
    </div>
    <div class="card-body">
        <!--begin::Search Form-->
        <div class="mb-7">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>@Messages.From</label>
                        <input type="datetime-local" id="DateFrom" class="form-control form-control-solid" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>@Messages.To</label>
                        <input type="datetime-local" id="DateTo" class="form-control form-control-solid" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>@Messages.Branch</label>
                        <select id="SelectBranch" class="form-control select2">
                            <option value="">-- @string.Format(Messages.Select, Messages.Branch) --</option>
                        </select>
                    </div>
                </div>
            </div>
            <!--end: Search Form-->
            <!--begin: Datatable-->
            <div class="datatable table-striped datatable-head-custom" id="kt_datatable"></div>
            <!--end: Datatable-->
        </div>
    </div>
</div>
<!--end::Card-->
@section Scripts{
    <script>
        "use strict";
        // Class definition
        var KTDatatableAutoColumnHideDemo = function () {
            // Private functions
            // basic demo
            var demo = function () {
                var datatable = $('#kt_datatable').KTDatatable({
                    // datasource definition
                    data: {
                        type: 'remote',
                        source: {
                            read: {
                                url: '/Report/CollectedAmountsReport',
                            },
                        },
                        pageSize: 10,
                        saveState: false,
                        serverFiltering: true,
                    },
                    layout: {
                        scroll: false
                    },
                    // column sorting
                    sortable: true,
                    pagination: false,
                    search: {
                        input: $('#kt_datatable_search_query'),
                        key: 'generalSearch'
                    },
                    // columns definition
                    columns: [
                        {
                            field: 'customerName',
                            title: '@Messages.CustomerFullName',
                            sortable: false,
                            autoHide: false,
                            width: 150
                        },
                        {
                            field: 'customerPhoneNumber',
                            title: '@Messages.CustomerPhoneNumber',
                            sortable: false,
                            width: 150
                        },
                        {
                            field: 'item',
                            title: '@Messages.Item',
                            sortable: false,
                            width: 100
                        },
                        {
                            field: 'itemBarcode',
                            title: '@Messages.Barcode',
                            sortable: false,
                            width: 150
                        },
                        {
                            field: 'collectionDate',
                            title: '@Messages.CollectionDate',
                            sortable: false,
                            width: 100
                        },
                        {
                            field: 'collectedAmount',
                            title: '@Messages.CollectedAmount',
                            sortable: false,
                            width: 100
                        }],
                });

                $('#DateFrom').on('change', function () {
                    datatable.search($(this).val().toLowerCase(), 'DateFrom');
                });

                $('#DateTo').on('change', function () {
                    datatable.search($(this).val().toLowerCase(), 'DateTo');
                });

                $('#SelectBranch').on('change', function () {
                    datatable.search($(this).val().toLowerCase(), 'BranchId');
                });
            };
            return {
                // public functions
                init: function () {
                    demo();
                },
            };
        }();
        jQuery(document).ready(function () {
            KTDatatableAutoColumnHideDemo.init();
        });

        $("#PdfBtn").click(function () {
            var dateFrom = "";
            var dateFromVal = $('#DateFrom').val();
            if (dateFromVal) {
                dateFrom = dateFromVal;
            }

            var dateTo = "";
            var dateToVal = $('#DateTo').val();
            if (dateToVal) {
                dateTo = dateToVal;
            }

            var branchId = "";
            var branchIdVal = $('#SelectBranch').val();
            if (branchIdVal) {
                branchId = branchIdVal;
            }

            window.open('/ReportPdf/CollectedAmountsReportPdf?DateFrom='
                + dateFrom + '&DateTo=' + dateTo + '&BranchId=' + branchId, '_blank');
        });

        $("#ExcelBtn").click(function () {
            var dateFrom = "";
            var dateFromVal = $('#DateFrom').val();
            if (dateFromVal) {
                dateFrom = dateFromVal;
            }

            var dateTo = "";
            var dateToVal = $('#DateTo').val();
            if (dateToVal) {
                dateTo = dateToVal;
            }

            var branchId = "";
            var branchIdVal = $('#SelectBranch').val();
            if (branchIdVal) {
                branchId = branchIdVal;
            }

            window.open('/ReportExcel/CollectedAmountsReportExcel?DateFrom=' 
                + dateFrom + '&DateTo=' + dateTo + '&BranchId=' + branchId, '_blank');
        });

        $.ajax({
            url: '/Branch/List',
            dataType: "json",
            success: function (data) {
                $(data).each(function (index, value) {
                    $("#SelectBranch").append($("<option></option>").val(value.id).html(value.name));
                });
            }
        });
    </script>
    }



